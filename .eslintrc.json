{
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "space-infix-ops": ["error", { "int32Hint": false }],
    "quotes": ["error", "double", { "allowTemplateLiterals": true }]
  },
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ]
}
